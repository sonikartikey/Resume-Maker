<h2>fill your experiences details</h2>
<div class ="center">
<%= form_for @experience , method: :patch do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1">designation</label>
    <%= f.text_field :designation, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">company</label>
    <%= f.text_field :company,class: "form-control", placeholder:"Enter Email" %>
  </div>
    <div class="form-group">
    <label for="exampleInputPassword1">description</label>
    <%= f.text_area :description,class: "form-control" %>
  </div>
    <div class="form-group">
    <label for="exampleInputPassword1">start date</label>
    <%= f.text_area :start_date,class: "form-control"%>
  </div>
      <div class="form-group">
    <label for="exampleInputPassword1">End date</label>
    <%= f.text_area :end_date,class: "form-control"%>
  </div>
  <%=f.hidden_field :user_id, value: current_user.id%>
  <%=f.submit  %>
<% end %>
</div>

<%=link_to 'Back', experiences_path %>