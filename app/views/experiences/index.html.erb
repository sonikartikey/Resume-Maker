<%@experiences.each do |experience|%>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">designation</th>
      <th scope="col">company</th>
      <th scope="col">description</th>
      <th scope="col">Start date</th>
      <th scope="col">End date</th>
      <th scope="col">Show Links</th>
      <th scope="col">Edit Links</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%=experience.designation%></td>
      <td><%=experience.company%></td>
      <td><%=experience.description%></td>
      <td><%=experience.start_date%></td>
      <td><%=experience.end_date%></td>
      <td><%=link_to 'show', experience_path(experience.id) %></td>
      <td><%=link_to 'Edit', edit_experience_path(experience.id) %></td>
    </tr>
  </tbody>
</table>
<%end%>

<%=link_to 'Add more Experience' , new_experience_path%>