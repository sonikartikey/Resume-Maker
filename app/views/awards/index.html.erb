<%#= render :template => 'awards/new'%>
<div class ="center">
<%= form_for @award do |f| %>
  <div class="form-group">
    <label for="exampleInputPassword1"> Add More Awards</label>
    <%= f.text_field :description,class: "form-control"%>
  </div>
  <%=f.hidden_field :user_id, value: current_user.id%>
  <%=f.submit  %>
<% end %>
</div>
<hr>
<%@awards.each do |award|%>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Description</th>
      <th scope="col">Show Link</th>
      <th scope="col">Edit Link</th>
      <th scope="col">Delete Link</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%=award.description%></td>
      <td><%=link_to 'show', award_path(award.id) %></td>
      <td><%=link_to 'Edit', edit_award_path(award.id) %></td>
      <td><%= link_to 'Delete',  award_path(award.id), method: :delete %></td>
    </tr>
  </tbody>
</table>
<%end%>
<%=link_to 'Add more Awards' , new_award_path%>